.row
    .input-field.col.s12
        input#title.validate(type='text', name='title', value=title ? title : "",required, autofocus)
        label(for='title') #{__('projects.form.fields.title')}
.row
    #description #{description ? description : ""}
.row
    .col.s4
        span.left #{`${__('projectPage.tabs.general.forceBoardType')}:`}
        .switch.left
            label
                | #{__('switch.off')}
                input(type='checkbox', name='forceBoardType', checked=forceBoardType, disabled=isActive)#canForceBoardType
                span.lever
                | #{__('switch.on')}
    .col.s8
        .input-field#boardSelectionRow
            select(disabled=isActive).icons#boardSelection
                option(value=0)
                    | #{__('projects.type.scrum')}
                option(value=1)
                    | #{__('projects.type.kanban')}
            label
                | #{__('projects.type.label')}

block scripts
    script(src='/js/projects/projects-add-content.js')
    script(src='/summernote/summernote.js')
