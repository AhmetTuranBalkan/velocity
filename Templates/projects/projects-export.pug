extends ../layout

block styles
    link(rel='stylesheet' href='/stylesheets/css/projects.css')

block title
    title #{__('projects.title')}

block content
    include ../navbar
    br
    .container#projects-export-container
        #loader
        .row#projects-export-div
            .col.s12
                .card.center
                    .card-image
                        a.btn-floating.halfway-fab.waves-effect.waves-light.cancelButtonBackground-background-colour.cancelButtonText-colour.left(href='/projects')
                            i.material-icons arrow_back
                    .card-content
                        h5.card-title #{__('projects.export.form.title')}
                        h6 #{__('projects.export.form.description')}
                    .card-action
                        button.waves-effect.waves-light.btn.primaryColour-background-colour#projects-export-form-submit #{__('actions.export')}
                            i.material-icons.right cloud_download
block scripts
    script(src='/js/projects/projects-export.js')