extends ../layout

block styles
    link(rel='stylesheet' href='/stylesheets/css/projects.css')

block title
    title #{__('projects.title')}

block content
    include ../navbar
    br
    .container#projects-import-container
        #loader
        .row#projects-import-div
            .col.s12
                .card.center
                    .card-image
                        a.btn-floating.halfway-fab.waves-effect.waves-light.cancelButtonBackground-background-colour.cancelButtonText-colour.left(href='/projects')
                            i.material-icons arrow_back
                    .card-content
                        h5.card-title #{__('projects.import.form.title')}
                        h6 #{__('projects.import.form.description')}
                    .card-action
                        form(encType='multipart/form-data')#projects-import-form
                            .file-field.input-field
                                .btn.primaryColour-background-colour
                                    span #{__('projects.import.form.button')}
                                    input(type='file', accept='.velocity')#projects-import-form-input
                                .file-path-wrapper
                                    input.file-path.validate(type='text', placeholder=__('projects.import.form.placeHolder'))
                        br
                        button.waves-effect.waves-light.btn.primaryColour-background-colour#projects-import-form-submit #{__('actions.import')}
                            i.material-icons.right cloud_download
block scripts
    script(src='/js/projects/projects-import.js')