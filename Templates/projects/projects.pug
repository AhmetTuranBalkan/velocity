extends ../layout

block styles
    link(rel='stylesheet' href='/stylesheets/css/projects.css')

block title
    title #{__('projects.title')}

block content
    include ../navbar
    br
    .container
        .row
            form.col.s10.offset-s1
                .row
                    .input-field.col.s12.xl8
                        input#searchFilter.validate(type='text')
                        label(for='searchFilter')  #{__('users.searchFilter')}
                    .input-field.col.s12.m6.xl2
                        select#typeFilter
                            option(value='-1') #{__('projects.all')}
                            option(value='0') #{__('projects.boardTypes.kanban')}
                            option(value='1') #{__('projects.boardTypes.scrum')}
                        label #{__('projects.boardTypes.label')}
                    .input-field.col.s12.m6.xl2
                        select#statusFilter
                            option(value='-1') #{__('users.all')}
                            option(value='2') #{__('projects.status.active')}
                            option(value='1') #{__('projects.status.pending')}
                            option(value='0') #{__('projects.status.disabled')}
                        label #{__('projects.status.label')}
        .row
            .col.s6
                a.waves-effect.waves-light.btn.left.primaryColour-background-colour(href='/projects/import', disabled) #{__('actions.import')}
                    i.material-icons.right cloud_upload
            .col.s6
                a.waves-effect.waves-light.btn.right.primaryColour-background-colour(href='/projects/add') #{__('actions.create')}
                    i.material-icons.right send
        .row
            ul.collapsible(data-collapsible='accordion')
                li
                    .collapsible-header
                        i.material-icons filter_drama
                        | First
                    .collapsible-body
                        span Lorem ipsum dolor sit amet.
                li
                    .collapsible-header
                        i.material-icons place
                        | Second
                    .collapsible-body
                        span Lorem ipsum dolor sit amet.
                li
                    .collapsible-header
                        i.material-icons whatshot
                        | Third
                    .collapsible-body
                        span Lorem ipsum dolor sit amet.

block scripts
    script(src='/js/projects/projects.js')