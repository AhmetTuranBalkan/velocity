extends ../layout

block styles
    link(rel='stylesheet' href='/stylesheets/css/profile.css')

block title
    title #{__('settings.title')}

block content
    include ../navbar
    br
    .container
        ul.collapsible(data-collapsible='expandable')
            include settings-general
            include settings-users
    .row.center
        .container
            button.waves-effect.waves-light.grey.btn.col.s12.m4.customSettingsButton#resetButton
                | #{__('actions.reset')}
                i.material-icons.right replay
            button.waves-effect.waves-light.red.btn.col.s12.m4.customSettingsButton#cancelButton
                | #{__('actions.cancel')}
                i.material-icons.right close
            button.waves-effect.waves-light.btn.col.s12.m4.customSettingsButton#saveButton
                | #{__('actions.save')}
                i.material-icons.right save

block scripts
  script(src='/js/settings.js')