extends ../layout

block styles
    link(rel='stylesheet' href='/stylesheets/css/profile.css')

block title
    title users

block content
    include ../navbar
    .container
        br
        .row
            .col.s12
                .card.center
                    .card-image
                        a.btn-floating.halfway-fab.waves-effect.waves-light.red.left(href='/users')
                            i.material-icons arrow_back
                    .card-content
                        h5.card-title Account Creation Form
                        h6 Add a user account
                    .card-action
                        .row
                            form.col.s12#userAddform
                                .row
                                    .input-field.col.s6
                                        input#fname.validate(type='text', name='fname', required autofocus)
                                        label(for='fname') First Name
                                    .input-field.col.s6
                                        input#lname.validate(type='text', name='lname', required)
                                        label(for='lname') Last Name
                                .row
                                    .input-field.col.s12
                                        input#username.validate(type='text', name='username', required)
                                        label(for='username') Username
                                .row
                                    .input-field.col.s12
                                        input#passwword.validate(type='password', name='password', required)
                                        label(for='passwword') Password
                                .row
                                    .input-field.col.s12
                                        input#email.validate(type='email', name='email', required)
                                        label(for='email') Email
                                .row
                                    .input-field.col.s4
                                        label(for='userType') User type:
                                    .input-field.col.s8
                                        select#userType
                                            each userType in userTypesList
                                                option(value=userType.value) #{userType.text}
                                .row
                                    button.waves-effect.waves-light.btn(type='submit') Submit
                                        i.material-icons.right send
block scripts
    script(src='/js/users/users-add.js')