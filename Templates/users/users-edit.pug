extends ../layout

block styles
    link(rel='stylesheet' href='/stylesheets/css/users.css')

block title
    title #{__('users.title')}

block content
    include ../navbar
    .container
        br
        .row
            .col.s12
                .card.center
                    .card-image
                        a.btn-floating.halfway-fab.waves-effect.waves-light.red.left(href='/users')
                            i.material-icons arrow_back
                    .card-content
                        h5.card-title #{__('users.usersEditFormTitle')}
                        h6 #{__('users.usersEditFormDescription')}
                    .card-action
                        .row
                            form.col.s12#userEditform
                                .row
                                    .input-field.col.s6
                                        input#fname.validate(type='text', name='fname', value=editUser.fname, required autofocus)
                                        label(for='fname') #{__('userInformation.firstName')}
                                    .input-field.col.s6
                                        input#lname.validate(type='text', name='lname', value=editUser.lname, required)
                                        label(for='lname') #{__('userInformation.lastName')}
                                .row
                                    .input-field.col.s12
                                        input#username.validate(type='text', name='username', value=editUser.username, required)
                                        label(for='username') #{__('userInformation.username')}
                                .row
                                    .input-field.col.s12
                                        input#passwword.validate(type='password', name='password')
                                        label(for='passwword') #{__('userInformation.password')}
                                .row
                                    .input-field.col.s12
                                        input#email.validate(type='email', name='email', value=editUser.email, required)
                                        label(for='email') #{__('userInformation.email')}
                                .row
                                    .input-field.col.s4
                                        label(for='userType') #{__('users.userType')}:
                                    .input-field.col.s8
                                        select#userType
                                            each userType in userTypesList
                                                option(value=userType.value, selected=editUser.type===userType.value) #{userType.text}
                                .row
                                    .input-field.col.s4
                                        label(for='userStatus') #{__('users.userStatus')}:
                                    .input-field.col.s8
                                        select#userStatus
                                            each userStatus in userStatusList
                                                option(value=userStatus.value, selected=editUser.status===userStatus.value) #{userStatus.text}
                                .row
                                    button.waves-effect.waves-light.btn(type='submit') #{__('actions.submit')}
                                        i.material-icons.right send
block scripts
    script(src='/js/users/users-edit.js')