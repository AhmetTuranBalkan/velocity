extends ../layout

block styles
    link(rel='stylesheet' href='/stylesheets/css/users.css')

block title
    title #{__('users.title')}

block content
    include ../navbar
    br
    .container#account-export-container
        #loader
        .row#account-export-div
            .col.s12
                .card.center
                    .card-image
                        a.btn-floating.halfway-fab.waves-effect.waves-light.cancelButtonBackground-background-colour.cancelButtonText-colour.left(href='/users')
                            i.material-icons arrow_back
                    .card-content
                        h5.card-title #{__('users.export.form.title')}
                        h6 #{__('users.export.form.description')}
                    .card-action
                        button.waves-effect.waves-light.btn.primaryColour-background-colour#account-export-form-submit #{__('actions.export')}
                            i.material-icons.right cloud_download
block scripts
    script(src='/js/users/users-export.js')