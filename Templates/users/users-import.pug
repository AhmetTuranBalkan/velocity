extends ../layout

block styles
    link(rel='stylesheet' href='/stylesheets/css/users.css')

block title
    title users

block content
    include ../navbar
    br
    .container
        .row
            .col.s12
                .card.center
                    .card-image
                        a.btn-floating.halfway-fab.waves-effect.waves-light.red.left(href='/users')
                            i.material-icons arrow_back
                    .card-content
                        h5.card-title Accounts Import Form
                        h6 Your CSV file needs to have the following fields: username, password, first name, last name and email
                    .card-action
                        form(encType='multipart/form-data')#account-import-form
                            .file-field.input-field
                                .btn
                                    span File
                                    input(type='file', accept='.csv')#account-import-form-input
                                .file-path-wrapper
                                    input.file-path.validate(type='text', placeholder='Select your csv file')
                        br
                        a.waves-effect.waves-light.btn#account-import-form-submit
                            i.material-icons.left cloud_upload
                            | Import
block scripts
    script(src='/js/users/users-import.js')